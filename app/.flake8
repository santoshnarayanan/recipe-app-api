[flake8]
# Maximum allowed line length (Black uses 88 by default, PEP8 is 79)
max-line-length = 88

# Ignore specific error codes (common ignores for Django/DRF)
ignore =
    E203,  # Whitespace before ':', conflicts with Black
    W503,  # Line break before binary operator (Black compatible)
    F401,  # Imported but unused (common in Django views or serializers)
    F403,  # 'from module import *' used; can't detect undefined names
    D100,  # Missing docstring in public module
    D104,  # Missing docstring in public package
    D107,  # Missing docstring in __init__
    E501,  # Line too long (handled by max-line-length)

# Exclude folders/files from linting
exclude =
    migrations,
    __pycache__,
    env,
    venv,
    .venv,
    node_modules,
    static,
    media,
    .git,
    .tox,
    .eggs,
    *.egg-info,

# Enable plugins if installed (example: flake8-bugbear)
select = C,E,F,W,B,B950

# Show source code for errors
show-source = True

# Count total errors and warnings
count = True
